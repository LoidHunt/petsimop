local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RemoteEvent = ReplicatedStorage.RemoteEvent

-- Helper function to fire remote event
local function fireRemote(...)
    RemoteEvent:FireServer(...)
end

-- Pick up fairy
fireRemote("PickUpItem", .Fairy)

-- Weld fairy to hand
fireRemote("FireAllClients", "WeldItemToHand", .GripAttachment, workspace.GPTbot_1.RightHand.RightGripAttachment)

-- Unweld fairy from hand
fireRemote("FireAllClients", "UnweldItemFromHand", .Main)

-- Add fairy to cauldron
local cauldron = workspace.PlayerCauldrons.PlayerCauldron7.CauldronSet.Cauldron
fireRemote("AddIngredientToCauldron", cauldron, .Fairy)

-- Bottle the potion
fireRemote("AttemptBottlePotion", cauldron)

-- Emit particles
fireRemote("FireAllClients", "EmitParticles", cauldron.Contents.ItemAdded, {
    Duration = 0.8
})

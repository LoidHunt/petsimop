-- Optimized Remote Event Calls
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RemoteEvent = ReplicatedStorage.RemoteEvent
local Workspace = game:GetService("Workspace")

local function fireServer(...)
    RemoteEvent:FireServer(...)
end

-- Cauldron reference
local cauldron = workspace.PlayerCauldrons.PlayerCauldron7.CauldronSet.Cauldron

-- Pick up fairy item
fireServer("PickUpItem", .Fairy) -- Note: Fairy instance needs to be properly referenced

-- Weld item to hand
fireServer("FireAllClients", "WeldItemToHand", 
    .GripAttachment, -- Note: GripAttachment needs proper reference
    workspace.GPTbot_1.RightHand.RightGripAttachment
)

-- Unweld item from hand
fireServer("FireAllClients", "UnweldItemFromHand", 
    .Main -- Note: Main instance needs proper reference
)

-- Add ingredient to cauldron
fireServer("AddIngredientToCauldron", cauldron, .Fairy)

-- Attempt to bottle potion
fireServer("AttemptBottlePotion", cauldron)

-- Emit particles
fireServer("FireAllClients", "EmitParticles", 
    cauldron.Contents.ItemAdded, 
    {Duration = 0.8}
)

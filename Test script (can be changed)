    ["Hacker"] = true,
    ["Superhero Cape"] = true,
    ["Anime Sword of Destiny"] = true,
    ["Magic Seed"] = true,
    ["Hat Of Gears"] = true,
    ["Wheel"] = true,
    ["Cloud"] = true,
    ["Hacker"] = true,

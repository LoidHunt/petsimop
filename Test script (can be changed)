local PotionRandomizerEnabled = false
local AutoBlockEnabled = true
local Items = {}
local BlacklistedItems = {
    ["Acid Barrel"] = true,
    ["Paintbrush"] = true,
    ["Gun"] = true,
    ["Beans"] = true,
    ["Rotten Sandwich"] = true,
    ["Honey"] = true,
    ["Dynamite"] = true,
    ["Chilli"] = true,
    ["Mushroom"] = true,
    ["Egyptian Head"] = true,
    ["Slime Bucket"] = true,
